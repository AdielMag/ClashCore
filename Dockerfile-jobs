# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY src/MyApp.Shared/MyApp.Shared.csproj MyApp.Shared/
COPY src/MyApp.Server.Common/MyApp.Server.Common.csproj MyApp.Server.Common/
COPY src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj MyApp.Server.Jobs/
RUN dotnet nuget locals all --clear
RUN dotnet restore MyApp.Server.Jobs/MyApp.Server.Jobs.csproj

# Copy source code and build
COPY src/MyApp.Shared/ MyApp.Shared/
COPY src/MyApp.Server.Common/ MyApp.Server.Common/
COPY src/MyApp.Server.Jobs/ MyApp.Server.Jobs/
RUN dotnet restore MyApp.Server.Jobs/MyApp.Server.Jobs.csproj --force
RUN dotnet publish MyApp.Server.Jobs/MyApp.Server.Jobs.csproj -c Release -o /app/publish --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/runtime:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

ENTRYPOINT ["dotnet", "MyApp.Server.Jobs.dll"]