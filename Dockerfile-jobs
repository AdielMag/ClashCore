# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY MyApp.Server.Common/MyApp.Server.Common.csproj src/MyApp.Server.Common/
COPY MyApp.Server.Jobs/MyApp.Server.Jobs.csproj src/MyApp.Server.Jobs/
RUN dotnet restore src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj

# Copy source code and build
COPY MyApp.Server.Common/ src/MyApp.Server.Common/
COPY MyApp.Server.Jobs/ src/MyApp.Server.Jobs/
RUN dotnet build MyApp.Server.Jobs/MyApp.Server.Jobs.csproj -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish MyApp.Server.Jobs/MyApp.Server.Jobs.csproj -c Release -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/runtime:8.0 AS runtime
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "MyApp.Server.Jobs.dll"]