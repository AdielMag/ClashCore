# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY src/MyApp.Shared/MyApp.Shared.csproj src/MyApp.Shared/
COPY src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj src/MyApp.Server.Jobs/
RUN dotnet restore src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj

# Copy source code and build
COPY src/MyApp.Shared/ src/MyApp.Shared/
COPY src/MyApp.Server.Jobs/ src/MyApp.Server.Jobs/
RUN dotnet build src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish src/MyApp.Server.Jobs/MyApp.Server.Jobs.csproj -c Release -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/runtime:8.0 AS runtime
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "MyApp.Server.Jobs.dll"]